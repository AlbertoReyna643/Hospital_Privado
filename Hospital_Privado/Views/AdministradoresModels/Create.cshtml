@model Hospital_Privado.Models.AdministradoresModels

@{
    ViewBag.Title = "Registrar Administrador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar un nuevo Administrador</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ingresa los datos del Administrador</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Nombre</label>
            @*Html.LabelFor(model => model.Nombre_Administrador, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre_Administrador, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.nom, @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Nombre_Administrador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Apellido Paterno</label>
            @*Html.LabelFor(model => model.Apellido_Paterno, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.Apellido_Paterno, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.apep, @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Apellido_Paterno, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Apellido Materno</label>
            @*Html.LabelFor(model => model.Apellido_Materno, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.Apellido_Materno, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.apem, @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Apellido_Materno, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <!--<input type="reset" value="Limpiar" class="btn btn-warning" />
                <a href="../AdministradoresModels/Index" class="btn btn-danger">Regresar</a>-->
            </div>
        </div>
    </div>
}

<div>
    @*Html.ActionLink("Back to List", "../AdministradoresModels/Index")*@
</div>
