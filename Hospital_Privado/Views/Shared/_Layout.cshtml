<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Hospital Privado</title>

    <link href="~/Content/My_Bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/My_Bootstrap/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/My_Bootstrap/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/Content/My_Bootstrap/css/animate.css" rel="stylesheet">
    <link href="~/Content/My_Bootstrap/css/style.css" rel="stylesheet">
</head>

<body>
    @using Microsoft.AspNet.Identity
    @if (Request.IsAuthenticated)
    {
        <div id="wrapper">
            <nav class="navbar-default navbar-static-side" role="navigation">
                <div class="sidebar-collapse">
                    <ul class="nav metismenu" id="side-menu">
                        <li class="nav-header">
                            <div class="dropdown profile-element">
                                <label style="color:#fff;">Hospital Privado</label>
                                <img alt="image" class="img-circle" src="~/Content/My_Bootstrap/img/my_img/clinica_logo.png" style="width:50px;" />
                            </div>
                            <div class="logo-element">
                                <img alt="image" class="img-circle" src="~/Content/My_Bootstrap/img/my_img/clinica_logo.png" style="width:50px;" />
                            </div>
                        </li>

                        @if (ViewBag.rol == 1)
                        {
                            <li><a href="../" style="background-color:#e87134; color:white;"><i class="fa fa-user"></i> <span class="nav-label">Administrador</span></a></li>
                            <li>
                                <a><i class="glyphicon glyphicon-book"></i> <span class="nav-label">Catalogos</span><span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level collapse">
                                    <li><a href="~/Account/Register"><i class="fa fa-user-plus"></i>Crear Cuenta</a></li>
                                    <li><a href="~/AdministradoresModels/"><i class="glyphicon glyphicon-tags"></i> <span class="nav-label">Administradores</span></a></li>
                                    <li><a href="~/CalificacionesModels/"><i class="glyphicon glyphicon-thumbs-up"></i> <span class="nav-label">Calificaciones</span></a></li>
                                    <li><a href="~/ConsultasModels/"><i class="glyphicon glyphicon-object-align-left"></i> <span class="nav-label">Consultas</span></a></li>
                                    <li><a href="~/ConsultoriosModels/"><i class="glyphicon glyphicon-compressed"></i> <span class="nav-label">Consultorios</span></a></li>
                                    <li><a href="~/DoctoresModels/"><i class="glyphicon glyphicon-user"></i> <span class="nav-label">Doctores</span></a></li>
                                    <li><a href="~/LaboratoriosModels/"><i class="glyphicon glyphicon-inbox"></i> <span class="nav-label">Laboratorios</span></a></li>
                                    <li><a href="~/PacientesModels/"><i class="glyphicon glyphicon-user"></i> <span class="nav-label">Pacientes</span></a></li>
                                    <li><a href="~/ServiciosModels/"><i class="glyphicon glyphicon-plane"></i> <span class="nav-label">Servicios</span></a></li>
                                    <li><a href="~/TipoUsuariosModels/"><i class="glyphicon glyphicon-user"></i> <span class="nav-label">Tipos de Usuarios</span></a></li>
                                    <li><a href="~/UsuariosModels/"><i class="glyphicon glyphicon-user"></i> <span class="nav-label">Usuarios</span></a></li>
                                </ul>
                            </li>
                        }
                        else if (ViewBag.rol == 2)
                        {
                            <li><a href="../" style="background-color:#276de5; color:white"><i class="fa fa-user"></i> <span class="nav-label">Doctor</span></a></li>
                            <li>
                                <a><i class="glyphicon glyphicon-book"></i> <span class="nav-label">Catalogos</span><span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level collapse">
                                    <li><a href="~/ConsultasModels/"><i class="fa fa-th-large"></i> <span class="nav-label">Consultas</span></a></li>
                                    <li><a href="~/PacientesModels/"><i class="fa fa-th-large"></i> <span class="nav-label">Pacientes</span></a></li>
                                </ul>
                            </li>
                        }
                        else if (ViewBag.rol == 3)
                        {<!-- #db9fe0 -->
                            <li><a href="../" style="background-color:#c460cc; color:white"><i class="fa fa-user"></i> <span class="nav-label">Paciente</span></a></li>
                            <li>
                                <a><i class="glyphicon glyphicon-book"></i> <span class="nav-label">Catalogos</span><span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level collapse">
                                    <li><a href="~/CalificacionesModels/"><i class="fa fa-th-large"></i> <span class="nav-label">Calificaciones</span></a></li>
                                    <li><a href="~/ConsultasModels/"><i class="fa fa-th-large"></i> <span class="nav-label">Consultas</span></a></li>
                                </ul>
                            </li>
                        }

                        <li><a href="~/"><i class="fa fa-th-large"></i> <span class="nav-label">Inicio</span></a></li>
                        <li><a href="~/Home/Servicios"><i class="glyphicon glyphicon-list"></i> <span class="nav-label">Servicios</span></a></li>
                        <li><a href="~/Home/Beneficios"><i class="glyphicon glyphicon-signal"></i> <span class="nav-label">Beneficios</span></a></li>
                        <li>
                            <a><i class="fa fa-info-circle"></i> <span class="nav-label">Acerca de</span><span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level collapse">
                                <li><a href="~/Home/About"><i class="fa fa-users"></i>Nosotros</a></li>
                                <li><a href="~/Home/Contact"><i class="fa fa-info"></i>Contacto</a></li>
                            </ul>
                        </li>

                        <!-- AQUI TENIA OALOGOS -->

                    </ul>
                </div>
            </nav>


            <!-- MENU SUPERIOR-->
            <div id="page-wrapper" class="gray-bg">
                <div class="row border-bottom">
                    <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                        <div class="navbar-header">
                            <a class="navbar-minimalize minimalize-styl-2 btn btn-primary"><i class="fa fa-bars"></i> </a>
                        </div>

                        <ul class="nav navbar-top-links navbar-right">
                            @Html.Partial("_LoginPartial")
                        </ul>

                    </nav>
                </div>
                <!-- CONTENIDO -->
                <div class="wrapper wrapper-content">
                    <div class="row animated fadeInRight">
                        <div class="col-lg-12">
                            <div class="ibox float-e-margins">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
                <div class="footer">
                    <p>Hospital Privado &copy; @DateTime.Now.Year - Diego Rayna</p>
                </div>

            </div>
        </div>


        <!-- Mainly scripts -->
        <script src="~/Content/My_Bootstrap/js/jquery-2.1.1.js"></script>
        <script src="~/Content/My_Bootstrap/js/bootstrap.min.js"></script>
        <script src="~/Content/My_Bootstrap/js/plugins/metisMenu/jquery.metisMenu.js"></script>
        <script src="~/Content/My_Bootstrap/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

        <!-- Peity -->
        <script src="~/Content/My_Bootstrap/js/plugins/peity/jquery.peity.min.js"></script>

        <!-- Custom and plugin javascript -->
        <script src="~/Content/My_Bootstrap/js/inspinia.js"></script>
        <script src="~/Content/My_Bootstrap/js/plugins/pace/pace.min.js"></script>

        <!-- Peity -->
        <script src="~/Content/My_Bootstrap/js/demo/peity-demo.js"></script>


        <script>
            $(document).ready(function () {

                // Local script for demo purpose only
                $('#lightVersion').click(function (event) {
                    event.preventDefault()
                    $('#ibox-content').removeClass('ibox-content');
                    $('#vertical-timeline').removeClass('dark-timeline');
                    $('#vertical-timeline').addClass('light-timeline');
                });

                $('#darkVersion').click(function (event) {
                    event.preventDefault()
                    $('#ibox-content').addClass('ibox-content');
                    $('#vertical-timeline').removeClass('light-timeline');
                    $('#vertical-timeline').addClass('dark-timeline');
                });

                $('#leftVersion').click(function (event) {
                    event.preventDefault()
                    $('#vertical-timeline').toggleClass('center-orientation');
                });


            });
        </script>
        @RenderSection("scripts", required: false)
    }
    else if (!Request.IsAuthenticated)
    {
        <div id="wrapper">
            <nav class="navbar-default navbar-static-side" role="navigation">
                <div class="sidebar-collapse">
                    <ul class="nav metismenu" id="side-menu">
                        <li class="nav-header">
                            <div class="dropdown profile-element">
                                <label style="color:#fff;">Hospital Privado</label>
                                <img alt="image" class="img-circle" src="~/Content/My_Bootstrap/img/my_img/clinica_logo.png" style="width:50px;" />
                            </div>
                            <div class="logo-element">
                                <img alt="image" class="img-circle" src="~/Content/My_Bootstrap/img/my_img/clinica_logo.png" style="width:50px;" />
                            </div>
                        </li>

                        <li><a href="~/Home/"><i class="fa fa-th-large"></i> <span class="nav-label">Inicio</span></a></li>
                        <li>
                            <a href="~/Home/Servicios"><i class="glyphicon glyphicon-list"></i> <span class="nav-label">Servicios</span></a>
                        </li>
                        <li>
                            <a href="~/Home/Beneficios"><i class="glyphicon glyphicon-signal"></i> <span class="nav-label">Beneficios</span></a>
                        </li>
                        <li>
                            <a><i class="fa fa-user"></i> <span class="nav-label">Cuenta HP+</span><span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level collapse">
                                <li><a href="~/Account/Login"><i class="fa fa-sign-out"></i>Iniciar Sesión</a></li>
                                <li><a href="~/Account/Register"><i class="fa fa-user-plus"></i>Crear Cuenta</a></li>
                            </ul>
                        </li>
                        <li>
                            <a><i class="fa fa-info-circle"></i> <span class="nav-label">Acerca de</span><span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level collapse">
                                <li><a href="~/Home/About"><i class="fa fa-users"></i>Nosotros</a></li>
                                <li><a href="~/Home/Contact"><i class="fa fa-info"></i>Contacto</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>


            <!-- MENU SUPERIOR-->
            <div id="page-wrapper" class="gray-bg">
                <div class="row border-bottom">
                    <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                        <div class="navbar-header">
                            <a class="navbar-minimalize minimalize-styl-2 btn btn-primary"><i class="fa fa-bars"></i> </a>
                        </div>

                        <ul class="nav navbar-top-links navbar-right">
                            @Html.Partial("_LoginPartial")
                        </ul>

                    </nav>
                </div>
                <!-- CONTENIDO -->
                <div class="wrapper wrapper-content">
                    <div class="row animated fadeInRight">
                        <div class="col-lg-12">
                            <div class="ibox float-e-margins">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
                <div class="footer">
                    <p>Hospital Privado &copy; @DateTime.Now.Year - Diego Rayna</p>
                </div>

            </div>
        </div>


        <!-- Mainly scripts -->
        <script src="~/Content/My_Bootstrap/js/jquery-2.1.1.js"></script>
        <script src="~/Content/My_Bootstrap/js/bootstrap.min.js"></script>
        <script src="~/Content/My_Bootstrap/js/plugins/metisMenu/jquery.metisMenu.js"></script>
        <script src="~/Content/My_Bootstrap/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

        <!-- Peity -->
        <script src="~/Content/My_Bootstrap/js/plugins/peity/jquery.peity.min.js"></script>

        <!-- Custom and plugin javascript -->
        <script src="~/Content/My_Bootstrap/js/inspinia.js"></script>
        <script src="~/Content/My_Bootstrap/js/plugins/pace/pace.min.js"></script>

        <!-- Peity -->
        <script src="~/Content/My_Bootstrap/js/demo/peity-demo.js"></script>


        <script>
            $(document).ready(function () {

                // Local script for demo purpose only
                $('#lightVersion').click(function (event) {
                    event.preventDefault()
                    $('#ibox-content').removeClass('ibox-content');
                    $('#vertical-timeline').removeClass('dark-timeline');
                    $('#vertical-timeline').addClass('light-timeline');
                });

                $('#darkVersion').click(function (event) {
                    event.preventDefault()
                    $('#ibox-content').addClass('ibox-content');
                    $('#vertical-timeline').removeClass('light-timeline');
                    $('#vertical-timeline').addClass('dark-timeline');
                });

                $('#leftVersion').click(function (event) {
                    event.preventDefault()
                    $('#vertical-timeline').toggleClass('center-orientation');
                });


            });
        </script>
        @RenderSection("scripts", required: false)
    }
</body>

</html>
