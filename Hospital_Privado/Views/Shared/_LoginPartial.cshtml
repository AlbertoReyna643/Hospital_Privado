@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework;
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-top-links navbar-right">
            <li><a href="~/Home/">Hola </a></li>
            <li>
                <a href="~/Home/" style="color:dodgerblue">@ViewBag.nom</a>
                @*User.Identity.GetUserName() !*@
            </li>
            <li><a><i class="fa fa-sign-out"></i></a></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()" style="color:red">Cerrar Sesion</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-top-links navbar-right">

        <li>@Html.ActionLink("Registrate", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li><a><i class="fa fa-sign-out"></i></a></li>
        <li><a href="~/Account/Login" style="color:#27dc1b">Iniciar Sesión</a></li>
    </ul>
}
